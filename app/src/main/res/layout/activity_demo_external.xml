<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo_external_storage.DemoExternalActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/button_read_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ"
        app:layout_constraintEnd_toStartOf="@+id/button_write_storage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/button_write_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WRITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_read_storage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/button_read_storage" />
</androidx.constraintlayout.widget.ConstraintLayout>